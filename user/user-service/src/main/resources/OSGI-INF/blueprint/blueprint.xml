<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xsi:schemaLocation="
http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

    <jaxrs:server id="UserService" address="/userservice">
        <jaxrs:serviceBeans>
            <ref component-id="userSvc"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
        </jaxrs:providers>
    </jaxrs:server>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command>
            <action class="internship.services.userService.HelloCommand"/>
        </command>
        <command>
            <action class="internship.services.userService.DAOSwitchCommand">
                <property name="user" ref="userSvc"/>
            </action>
        </command>
    </command-bundle>

    <bean id="userSvc" class=" internship.services.userService.UserServiceImpl"
       />

</blueprint>
